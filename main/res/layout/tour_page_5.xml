<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        >

        <TextView
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:text="@string/less_than_symbol_prev_label"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:text="@string/exit_uc_label"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <LinearLayout
            android:id="@+id/tp5_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >
            <ImageView
                android:id="@+id/tp5_dot_page_1"
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:src="@drawable/tour_dots_off"
                android:contentDescription="@string/cd_ignore"/>
            <ImageView
                android:id="@+id/tp5_dot_page_2"
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:src="@drawable/tour_dots_off"
                android:contentDescription="@string/cd_ignore"/>
            <ImageView
                android:id="@+id/tp5_dot_page_3"
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:src="@drawable/tour_dots_off"
                android:contentDescription="@string/cd_ignore"/>
            <ImageView
                android:id="@+id/tp5_dot_page_4"
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:src="@drawable/tour_dots_off"
                android:contentDescription="@string/cd_ignore"/>
            <ImageView
                android:id="@+id/tp5_dot_page_5"
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:src="@drawable/tour_dots_on"
                android:contentDescription="@string/page_5_label"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tp5_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tp5_dots"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/tour_page_drawer_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="24sp"
            />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tp5_title"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/cd_global_ringtone_screenshot"/>

        <View
            android:id="@+id/tp5_separator"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/image"
            android:background="#e5e5e5"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tp5_separator"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            >

            <TextView
                android:id="@+id/tp5_register_global_ringtone_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/tour_page_change_global_ringtone_title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/holo_blue_dark"
                />

            <TextView
                android:id="@+id/tp5_global_ringtone_explanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@id/tp5_register_global_ringtone_header"
                android:text="@string/tour_page_global_ringtone_explanation"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/holo_blue_dark"
                />

            <TextView
                android:id="@+id/tp5_set_global_ringtone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_below="@id/tp5_global_ringtone_explanation"
                android:background="@drawable/billing_button_frame"
                android:text="@string/tour_page_set_global_ringtone_button_label"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />



            <TextView
                android:id="@+id/tp5_turn_off_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@id/tp5_set_global_ringtone"
                android:text="@string/tour_page_turn_off_other_apps_ringtones"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/holo_blue_dark"
                />

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
