    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        tools:context="com.aldersonet.automatonalert.Fragment.BackUpRestoreFragment">

        <TextView
            android:id="@+id/burf_backup_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_blue_dark"
            android:text="Backup App Data"
            />

        <TextView
            android:id="@+id/burf_backup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/burf_backup_title"
            android:layout_centerHorizontal="true"
            android:background="@android:drawable/editbox_background"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@android:color/holo_blue_dark"
            android:text="Backup"
            />

        <View
            android:id="@+id/burf_br_separator"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/holo_blue_dark"
            android:layout_below="@id/burf_backup"
            />
        <View
            android:id="@+id/burf_br_separator_2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_dark"
            android:layout_below="@id/burf_br_separator"
            />
        <View
            android:id="@+id/burf_br_separator_3"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_dark"
            android:layout_below="@id/burf_br_separator_2"
            />
        <View
            android:id="@+id/burf_br_separator_4"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/holo_blue_dark"
            android:layout_below="@id/burf_br_separator_3"
            />

        <TextView
            android:id="@+id/burf_restore_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_below="@id/burf_br_separator_4"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_blue_dark"
            android:text="Select File to Restore"
            />

        <TextView
            android:id="@+id/burf_restore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:background="@android:drawable/editbox_background"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@android:color/holo_blue_dark"
            android:text="Restore"
            />

        <ImageView
            android:id="@+id/burf_delete_restore_file"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/delete_bin_app_blue"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:id="@+id/burf_restore_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/burf_restore_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@android:color/holo_blue_dark"
            android:text="(sdcard/ContactRingtones/)"
            />

       <com.aldersonet.automatonalert.BackupRestore.RestoreListView
            android:id="@+id/burf_restore_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/burf_restore_description"
            android:layout_marginBottom="60dp"
            />
        <TextView
            android:id="@+id/burf_list_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/burf_restore_list"
            android:layout_alignLeft="@id/burf_restore_list"
            />

    </RelativeLayout>
