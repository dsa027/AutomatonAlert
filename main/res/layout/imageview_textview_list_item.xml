<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/itli_root_layout"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <View
        android:id="@+id/itli_spacer_top"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />

    <ImageView
        android:id="@+id/itli_imageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/itli_spacer_top"
        android:src="@drawable/app_icon_blue_64"
        android:layout_marginLeft="8dp"
        android:contentDescription="@string/cd_image"/>

    <TextView
        android:id="@+id/itli_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itli_spacer_top"
        android:layout_marginRight="8dp"
        android:layout_gravity="bottom|left"
        android:layout_toRightOf="@+id/itli_imageView"
        android:layout_alignTop="@+id/itli_imageView"
        android:layout_alignBottom="@+id/itli_imageView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="bottom|left"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginLeft="8dp"
        />

    <View
        android:id="@+id/itli_spacer_bottom"
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/itli_textview"
        />

    <View
        android:id="@+id/itli_separator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#d9dee0"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/itli_spacer_bottom"
        />


</RelativeLayout>
